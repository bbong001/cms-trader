---
import '../styles/global.css';
import { getAdminIdFromRequest } from '../server/auth';

// Check authentication
const adminId = getAdminIdFromRequest(Astro);
if (!adminId) {
  return Astro.redirect('/login');
}
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Trader CMS</title>
  </head>
  <body class="bg-gray-50">
    <div class="min-h-screen flex">
      <!-- Mobile Menu Toggle -->
      <button id="mobile-menu-toggle" class="lg:hidden fixed top-4 left-4 z-50 bg-gray-900 text-white p-2 rounded">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>

      <!-- Sidebar -->
      <aside id="sidebar" class="fixed lg:static w-64 bg-gray-900 text-white h-full transform -translate-x-full lg:translate-x-0 transition-transform duration-300 z-40">
        <div class="p-6 border-b border-gray-800">
          <h1 class="text-2xl font-bold mb-2">Trader CMS</h1>
          <form method="POST" action="/api/auth/logout" class="inline">
            <button type="submit" class="text-sm text-gray-400 hover:text-white">
              Đăng xuất
            </button>
          </form>
        </div>
        <nav class="px-4 pb-4 overflow-y-auto max-h-[calc(100vh-100px)]">
          <a href="/" class="flex items-center gap-3 py-2 px-4 rounded hover:bg-gray-800 mb-1">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            <span>Bảng điều khiển</span>
          </a>
          <a href="/users" class="flex items-center gap-3 py-2 px-4 rounded hover:bg-gray-800 mb-1">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>
            <span>Người dùng</span>
          </a>
          <a href="/verification-requests" class="flex items-center gap-3 py-2 px-4 rounded hover:bg-gray-800 mb-1">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
            <span>Yêu cầu xác minh</span>
          </a>
          <a href="/wallets" class="flex items-center gap-3 py-2 px-4 rounded hover:bg-gray-800 mb-1">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            <span>Ví</span>
          </a>
          <a href="/spot-orders" class="flex items-center gap-3 py-2 px-4 rounded hover:bg-gray-800 mb-1">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
